<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.wyliodrin.mobileapp.LoginActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wyliodrin"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/logout_text"
        android:text="@string/logout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:textColor="#E54125"
        android:gravity="center"/>

    <TextView
        android:text="@string/scan_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/qrcode_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape"
        android:text="TAP TO SCAN"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="@color/red"
        />

</LinearLayout>
